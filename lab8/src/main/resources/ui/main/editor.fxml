<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane stylesheets="@styles.css" xmlns:fx="http://javafx.com/fxml"
            fx:controller="se.ifmo.client.ui.main.EditController">
    <VBox spacing="10" alignment="TOP_CENTER"
          AnchorPane.topAnchor="10"
          AnchorPane.leftAnchor="10"
          AnchorPane.rightAnchor="10"
          AnchorPane.bottomAnchor="10">

        <Label text="Изменить элемент"/>

        <GridPane hgap="10" vgap="10" styleClass="popup-window">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Coordinate X:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="coordinateXField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Coordinate Y:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="coordinateYField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Engine Power:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="enginePowerField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Capacity:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="capacityField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Distance Travelled:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <TextField fx:id="distanceTravelledField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

            <Label text="Fuel Type:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
            <ChoiceBox fx:id="fuelTypeBox" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
        </GridPane>

        <Button text="Edit" fx:id="editButton"/>
    </VBox>
</AnchorPane>