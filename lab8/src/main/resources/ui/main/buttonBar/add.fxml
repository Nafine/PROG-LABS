<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<AnchorPane stylesheets="@../styles.css" xmlns:fx="http://javafx.com/fxml"
            fx:controller="se.ifmo.client.ui.main.button.bar.AddController">
    <VBox spacing="10" alignment="TOP_CENTER"
          AnchorPane.topAnchor="10"
          AnchorPane.leftAnchor="10"
          AnchorPane.rightAnchor="10"
          AnchorPane.bottomAnchor="10">

        <Label fx:id="header"/>

        <GridPane hgap="10" vgap="10" styleClass="popup-window">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <Label  fx:id="nameLabel" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label fx:id="coordinateXLabel"  GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="coordinateXField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label fx:id="coordinateYLabel" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="coordinateYField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label fx:id="enginePowerLabel" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="enginePowerField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label fx:id="capacityLabel" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="capacityField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label fx:id="distanceTravelledLabel" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <TextField fx:id="distanceTravelledField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

            <Label fx:id="fuelTypeLabel" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
            <ComboBox fx:id="fuelTypeBox" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
        </GridPane>

        <Button  fx:id="addButton"/>
        <Button  fx:id="addRandomButton"/>
        <Text fx:id="textMessage"/>
    </VBox>
</AnchorPane>
