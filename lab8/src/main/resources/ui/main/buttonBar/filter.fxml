<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane stylesheets="@../styles.css" xmlns:fx="http://javafx.com/fxml"
            fx:controller="se.ifmo.client.ui.main.button.bar.FilterController">
    <VBox spacing="10" alignment="TOP_CENTER" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
          AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
        <Label text="Filter Table" styleClass="header-label"/>

        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="idField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Owner ID:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="ownerIdField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Name:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="nameField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Coordinate X:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="coordinateXField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Coordinate Y:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="coordinateYField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Creation Date:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <DatePicker fx:id="creationDatePicker" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

            <Label text="Engine Power:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
            <TextField fx:id="enginePowerField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

            <Label text="Capacity:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
            <TextField fx:id="capacityField" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

            <Label text="Distance Travelled:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
            <TextField fx:id="distanceTravelledField" GridPane.rowIndex="8" GridPane.columnIndex="1"/>

            <Label text="Fuel Type:" GridPane.rowIndex="9" GridPane.columnIndex="0"/>
            <ComboBox fx:id="fuelTypeBox" GridPane.rowIndex="9" GridPane.columnIndex="1"/>
        </GridPane>

        <HBox spacing="10" alignment="CENTER">
            <Button text="Apply Filter" fx:id="applyButton" styleClass="filter-button"/>
            <Button text="Reset" fx:id="resetButton" styleClass="filter-button"/>
        </HBox>
    </VBox>
</AnchorPane>
